@page "{id:int}"
@model GerenRest.RazorPages.Pages.Produto.Details

<h1>Detalhes do Produto</h1>

<div>
    <p><strong>Nome:</strong>@Model.ProdModel.Nome</p>
    <p><strong>Descrição:</strong>@Model.ProdModel.Descricao</p>
    <p><strong>Preço:</strong>@Model.ProdModel.Preco</p>
    <p><strong>Categoria:</strong>@Model.ProdModel.Categoria!.Nome</p>
</div>

<a class="btn btn-primary" asp-page="./Index">Voltar para a lista</a>